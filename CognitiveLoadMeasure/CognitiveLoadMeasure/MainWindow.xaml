<Window x:Class="CognitiveLoadMeasure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CognitiveLoadMeasure"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200" 
        Keyboard.KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="StartButton" Click="StartButton_Click" Margin="5" FontSize="18" IsEnabled="True">Start Recording</Button>
            <Button Name="StopButton" Click="StopButton_Click" Margin="5" FontSize="18" IsEnabled="True">Stop Recording</Button>
        </StackPanel>
        
    </Grid>
</Window>
